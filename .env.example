# Environment Variables for WhatsApp Bot
# Copy this file to .env and fill in your values

# Optional: Set default browser path (if needed)
# BROWSER_PATH=/usr/bin/google-chrome

# Optional: Display settings for headless environments
# DISPLAY=:0

# Optional: Custom timezone (defaults to system timezone)
# TIMEZONE=UTC

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Custom wait times
# DEFAULT_WAIT_TIME=20

# Optional: Set to true to enable debug mode
DEBUG_MODE=false